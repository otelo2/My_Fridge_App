<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllProductsFragment">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="214dp"
        android:text="All products"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_return_to_fridge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="218dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="174dp"
        android:text="Return to fridge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutProduct"
        android:layout_width="408dp"
        android:layout_height="58dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <TextView
            android:id="@+id/product_name_1"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Milk"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_store"
            android:layout_width="6dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:text="Oxxo"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_add_to_fridge"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add to fridge"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutProduct2"
        android:layout_width="408dp"
        android:layout_height="58dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutProduct">

        <TextView
            android:id="@+id/product_name_2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Juice"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_store_2"
            android:layout_width="6dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:text="Walmart"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_add_to_fridge_2"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add to fridge"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutProduct3"
        android:layout_width="408dp"
        android:layout_height="58dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutProduct2">

        <TextView
            android:id="@+id/product_name_3"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bread"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_store_3"
            android:layout_width="6dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:text="Sams"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_add_to_fridge_3"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add to fridge"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>